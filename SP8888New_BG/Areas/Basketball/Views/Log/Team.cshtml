@model Tuple<List<Models.BasketballTeam>, List<Models.BasketballTeam>, int>
@{
    Layout = null;
    string viewName = Model.Item3 == 1 ? "TeamAdd" : (Model.Item3 == 2 ? "TeamDelete" : "TeamEdit");
    List<Models.BasketballTeam> basketteam = new List<Models.BasketballTeam>();
    int index = 0;
}
@if (Model.Item2.Any())
{
    foreach (var newitem in Model.Item2)
    {
        if (Model.Item1.Any())
        {
            var olditem = Model.Item1[index];
            basketteam.Add(olditem);
        }
        index++;
        basketteam.Add(newitem);
        @Html.DisplayFor(p => basketteam, viewName)
        basketteam.Clear();
    }
}
else
{
    if (Model.Item1.Any())
    {
        foreach (var newitem in Model.Item1)
        {
            basketteam.Add(newitem);
            @Html.DisplayFor(p => basketteam, viewName)
            basketteam.Clear();
        }
    }
}