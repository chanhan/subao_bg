@model Tuple<List<Models.BaseballTeam>, List<Models.BaseballTeam>, int>
@{
    Layout = null;
    string viewName = Model.Item3 == 1 ? "TeamAdd" : (Model.Item3 == 2 ? "TeamDelete" : "TeamEdit");
    List<Models.BaseballTeam> baseball = new List<Models.BaseballTeam>();
    int index = 0;
}
@if (Model.Item2.Any())
{
    foreach (var newitem in Model.Item2)
    {
        if (Model.Item1.Any())
        {
            var olditem = Model.Item1[index];
            baseball.Add(olditem);
        }
        index++;
        baseball.Add(newitem);
        @Html.DisplayFor(p => baseball, viewName)
        baseball.Clear();
    }
}
else
{
    if (Model.Item1.Any())
    {
        foreach (var newitem in Model.Item1)
        {
            baseball.Add(newitem);
            @Html.DisplayFor(p => baseball, viewName)
            baseball.Clear();
        }
    }
}
