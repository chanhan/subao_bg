@model List<Models.Marquee>
@{
    Models.Marquee newdata = Model[0];
}
<div>
    <b>
        @Common.AppData.GetGameTypeName(newdata.GameType)
        <br>
        (公告類型)：
        <font color="red">
            @Common.AppData.GetMarqueeText(newdata.GameType)
        </font>
        <br>
        (有效時間)：
        <font color="red">
            @newdata.EffectiveTime.ToString("yyyy-MM-dd")
        </font>
        <br>
        (繁體內容)：
        <font color="red">
            @newdata.MessageTW
        </font>
        <br>
        (简体内容)：
        <font color="red">
           @newdata.MessageCN
        </font>
        <br>
        ((English)：
        <font color="red">
            @newdata.MessageUS
        </font>
        <br>
        (是否自動關閉)：
        <font color="red">
            @(newdata.EnableYN.ToString() == "N" ? "關閉中" : "啟動中")
        </font>
        <br>
        (是否啟動)：
        <font color="red">
            @(newdata.AutoCloseYN.ToString() == "N" ? "關閉" : (newdata.AutoCloseYN.ToString() == "Y" ? "啟動" : "跑馬燈"))
        </font>
    </b>
</div>


