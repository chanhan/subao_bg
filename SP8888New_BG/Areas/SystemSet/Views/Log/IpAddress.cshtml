@model Tuple<List<Models.IPAccess>, List<Models.IPAccess>, int>
@{
    Layout = null;
    string viewName = Model.Item3 == 1 ? "IPAccessAdd" : (Model.Item3 == 2 ? "IPAccessDelete" : "IPAccessEdit");
    List<Models.IPAccess> ipaccess = new List<Models.IPAccess>();
    int index = 0;
}
@if (Model.Item2.Any())
{
    foreach (var newitem in Model.Item2)
    {
        if (Model.Item1.Any())
        {
            var olditem = Model.Item1[index];
            ipaccess.Add(olditem);
        }
        index++;
        ipaccess.Add(newitem);
        @Html.DisplayFor(p => ipaccess, viewName)
        ipaccess.Clear();
    }
}
else
{
    if (Model.Item1.Any())
    {
        foreach (var newitem in Model.Item1)
        {
            ipaccess.Add(newitem);
            @Html.DisplayFor(p => ipaccess, viewName)
            ipaccess.Clear();
        }
    }
}
