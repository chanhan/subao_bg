@model Tuple<List<Models.ViewModel.BasketBall>, List<Models.ViewModel.BasketBall>, int>
@{
    Layout = null;
    string viewName = Model.Item3 == 1 ? "SchedulesAdd" : (Model.Item3 == 2 ? "SchedulesDelete" : "SchedulesEdit");
    List<Models.ViewModel.BasketBall> basket = new List<Models.ViewModel.BasketBall>();
    int index = 0;
}
@if (Model.Item2.Any())
{
    foreach (var newitem in Model.Item2)
    {
        if (Model.Item1.Any())
        {
            var olditem = Model.Item1[index];
            basket.Add(olditem);
        }
        index++;
        basket.Add(newitem);
        @Html.DisplayFor(p => basket, viewName)
        basket.Clear();
    }
}
else
{
    if (Model.Item1.Any())
    {
        foreach (var newitem in Model.Item1)
        {
            basket.Add(newitem);
            @Html.DisplayFor(p => basket, viewName)
            basket.Clear();
        }
    }
}