@model Tuple<List<Models.ViewModel.AFB>, List<Models.ViewModel.AFB>, int>
@{
    Layout = null;
    string viewName = Model.Item3 == 1 ? "SchedulesAdd" : (Model.Item3 == 2 ? "SchedulesDelete" : "SchedulesEdit");
    List<Models.ViewModel.AFB> afb = new List<Models.ViewModel.AFB>();
    int index = 0;
}
@if (Model.Item2.Any())
{
    foreach (var newitem in Model.Item2)
    {
        if (Model.Item1.Any())
        {
            var olditem = Model.Item1[index];
            afb.Add(olditem);
        }
        index++;
        afb.Add(newitem);
        @Html.DisplayFor(p => afb, viewName)
        afb.Clear();
    }
}
else
{
    if (Model.Item1.Any())
    {
        foreach (var newitem in Model.Item1)
        {
            afb.Add(newitem);
            @Html.DisplayFor(p => afb, viewName)
            afb.Clear();
        }
    }
}
